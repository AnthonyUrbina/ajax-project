{
  "root": true,
  "env": {
    "node": false,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "script"
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-var": "off",
    "semi": [
      "error",
      "always"
    ],
    "padded-blocks": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "curly": [
      "error",
      "multi-line"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "public/js/main.js"
      ],
      "globals": {
        "data": "readonly"
      }
    }
  ]
}
